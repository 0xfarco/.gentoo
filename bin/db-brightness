#!/bin/bash

case $BLOCK_BUTTON in
	1) ;;
	3) notify-send "ðŸ”† Brightness module" "\- Shows current brightness level â˜€.
- Scroll to change adjust brightness." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# current brightness
curr_brightness=$(cat /sys/class/backlight/*/brightness)

# max_brightness
max_brightness=$(cat /sys/class/backlight/*/max_brightness)

# brightness percentage
brightness_per=$((100 * curr_brightness / max_brightness))

echo "ðŸ”† ${brightness_per}%"
